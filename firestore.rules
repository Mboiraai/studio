
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if the user is the owner of a document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Users can read public profiles, but only write to their own.
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }

    // A user can only access a match document if their UID is in the `userIds` array.
    match /matches/{matchId} {
       allow read, write: if isAuthenticated() && request.auth.uid in resource.data.userIds;

       // Messages can only be accessed by participants of the match.
       match /messages/{messageId} {
         allow read, write: if isAuthenticated() && request.auth.uid in get(/databases/$(database)/documents/matches/$(matchId)).data.userIds;
       }
    }
  }
}
