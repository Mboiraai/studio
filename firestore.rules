rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /profiles/{userId} {
      // Any authenticated user can view profiles.
      // Only the profile owner can write to their profile.
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }

    match /chats/{chatId} {
      // A user can read or update a chat document if they are a participant.
      // This rule allows the query on the 'matches' page to work correctly.
      allow read, update: if request.auth.uid in resource.data.participants;
      
      // A user can create a chat document if their UID is in the participants list of the new document.
      allow create: if request.auth.uid in request.resource.data.participants;
    }

    match /chats/{chatId}/messages/{messageId} {
      // A user can read or write messages in a chat if they are a participant in that chat.
      // This requires a 'get' call to the parent chat document to check the participants list.
      allow read, write: if request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
    }
  }
}
